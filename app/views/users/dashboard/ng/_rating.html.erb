<span ng-mouseleave="reset()">
  <span ng-show="range.length == 10">
    <span ng-repeat="r in range" ng-mouseenter="enter($index + 1)" ng-click="rate($index + 1)" class="circle-wrapper" ng-class="$index < val && (r.stateOn || 'circle-selected')"><span class="circled">{{$index+1}}</span></span>
  </span>
  <span ng-show="range.length == 5">
    <i ng-repeat="r in range" ng-mouseenter="enter($index + 1)" ng-click="rate($index + 1)" class="glyphicon" ng-class="$index < val && (r.stateOn || 'glyphicon-star') || (r.stateOff || 'glyphicon-star-empty')"></i>
  </span>
</span>