<div id="calls">
  <div class="overview-table-head">In the next 7 days</div>
  <table class="overview-table table table-striped">
    <tbody>
      <% if @next_7_days.any? %>
      <%= render partial: 'row', collection: @next_7_days, as: :call %>
      <% else %>
        <tr>
          <td colspan="3">The are are no calls in the next 7 days.</td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="overview-table-head">In 7 days or more</div>
  <table class="overview-table table table-striped">
    <tbody>
      <% if @after_7_days.any? %>
      <%= render partial: 'row', collection: @after_7_days, as: :call %>
      <% else %>
        <tr>
          <td colspan="3">The are are no calls in 7 days or more.</td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
