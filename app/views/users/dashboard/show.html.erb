<div class="dashboard container" ng-app="consulted.overview" ng-controller="TableCtrl">
  <%= render partial: 'layouts/messages' %>
  <div class="overview-head row">
    <div class="col-md-7">
      <%= render partial: 'review_calls' %>
      <h2>
        Upcoming Calls
        <span class="flaticon flaticon-help help" data-toggle="tooltip" data-placement="top" title="" data-original-title="Overview about your upcoming calls - requested or offered ones"></span><br>
        <small>Dial in: <a href="tel:+1 844-415-4000">+1 844-415-4000</a> (US toll-free) [<%= link_to 'more numbers', 'https://consultedco.zendesk.com/hc/en-us/articles/201304524', target: '_blank' %>]</small>
      </h2>

      <div class="ovr-timezone">
        <strong>Your timezone</strong>
        <%= render partial: 'timezone' %>
        <a class="btn btn-primary btn-xs" id="change_tz" data-toggle="modal" data-target="#tz_modal">Change</a>
      </div>
      <%= render partial: 'timezone_modal' %>
    </div>
    <div class="col-md-offset-1 col-md-4">
      <div id="quickaccess">
        <p id="quickaccess-head">Quick Access</p>

        <div id="quickaccess-text">
          <p>I want to...</p>

          <div class="clr">
            <%= link_to find_an_expert_path do %>
                Find an expert
            <% end %>
          </div>
          <div class="clr">
            <%= link_to offers_path do %>
                Offer my time
            <% end %>
          </div>
          <div class="clr">
            <%= link_to '/my-calls#/requested' do %>
              Manage calls I requested
            <% end %>
          </div>
          <div class="clr">
            <%= link_to "/my-calls#/offered" do %>
              Manage calls I offered
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render partial: 'calls' %>
</div>
