<div class="dashboard container">
  <h3>Dashboard</h3>
  <div class="row">
    <div class="col-sm-12">
      <h4>Upcoming calls</h4>
      <% if @calls.any? %>
      <% else %>
        <p class="text-center">You have no upcoming calls</p>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <h4>Requested calls <small>Calls other users requested</small></h4>
      <% if @requests.any? %>
        <ul>
          <% @requests.each do |request| %>
            <li>
              <h5><%= request.name %> <small>with <%= request.user.name %></small></h5>
              <% if request.message %>
                <%= simple_format request.message %>
              <% end %>
              <div class="btn-group">
                <%= link_to 'Accept', '#', class: 'btn btn-success'%>
                <%= link_to 'Decline', '#', class: 'btn btn-danger'%>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-center">You have no call requests</p>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <h4>Your requests <small>Calls your requested</small></h4>
      <% if @outstanding.any? %>
        <ul id="active_requests">
          <% @outstanding.each do |request| %>
            <li id="<%= dom_id(request) %>">
              <h5><%= request.name %> <small>with <%= request.user.name %></small></h5>
              <div class="btn-group">
                <%= link_to 'Cancel', cancel_request_path(request), class: 'btn btn-danger', remote: true, method: :patch, data: { confirm: 'Are you sure?', disable_with: 'Cancelling' } %>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-center">You have requested no calls</p>
      <% end %>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-12">
      <h3>I want to..</h3>
      <ul>
        <li>
          <%= link_to '...manage calls I offered', '#'  %>
        </li>
        <li>
          <%= link_to '...manage calls I requested', '#'  %>
        </li>
      </ul>
    </div>
  </div>
</div>
