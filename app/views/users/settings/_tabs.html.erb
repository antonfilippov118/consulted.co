<ul class="nav nav-tabs">
  <%
    {
      profile: settings_path,
      billing: billing_settings_path,
      accounts: accounts_settings_path,
      notifications: notifications_settings_path
    }.each_pair do |sym, path|
  %>
    <%= content_tag :li, class: active == sym ? 'active' : '' do %>
      <%= link_to sym.to_s.capitalize, path  %>
    <% end %>
  <% end %>
</ul>