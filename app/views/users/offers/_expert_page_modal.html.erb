<div class="modal fade" id="ep_modal" tabindex="-1" role="dialog" aria-labelledby="Timezone" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="Timezone change">Change your expert page</h4>
      </div>
      <%= form_for @user, url: profile_settings_path, remote: true do |f| -%>
        <div class="modal-body">
          <div class="popup-row">
            <%= f.label :slug, root_url %>
            <%= f.text_field :slug, class: 'form-control' %>
          </div>
          <div class="popup-row text-center">
            <p>Please note that not all URLs are available.</p>

          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit "Save", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
