<div class="col-lg-12">
  <div ng-show="loading" class="text-center">
    <i class="fa fa-spinner fa-spin fa-2x"></i>
  </div>
  <span class="save_indicator" ng-show="saving || saved">
    <span ng-show="saving">
      <i class="fa fa-spinner fa-spin"></i> Saving...
    </span>
    <span ng-show="saved">
      <i class="fa fa-check success"></i> Saved!
    </span>
  </span>
  <table ng-show="offers.length > 0 && !loading">
    <thead>
      <tr>
        <th>Category</th>
        <th>Rate per Hour (US$)</th>
        <th>Offered time slots</th>
        <th>Brief note on what makes you experienced in this category</th>
        <th>Relevant years of experience</th>
        <th>Your current awesome count</th>
        <th>
        </th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat="offer in offers | orderBy:'name'" ng-class="{invalid:!valid(offer)}">
        <td>{{offer.name}}</td>
        <td><input required type="number" ng-model="offer.rate" ng-change="save(offer)"></td>
        <td>
          Time slots
        </td>
        <td>
          <textarea required ng-model="offer.description" ng-change="save(offer)" cols="30" rows="5"></textarea>
        </td>
        <td>
          <input required type="number" ng-model="offer.experience" ng-change="save(offer)">
        </td>
        <td>
          20
        </td>
        <td class="text-center">
          <a ng-click="delete(offer)"><i class="fa fa-trash-o"></i></a>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="text-center" ng-hide="offers.length > 0 || loading">
    <p class="lead">You have no offers yet.</p>
  </div>
  <div class="text-center">
    <a ng-click="open()" class="btn btn-primary">Add more offers</a>
  </div>
</div>
