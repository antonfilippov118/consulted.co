<div class="signup">
  <div class="box">
    <div class="row">
      <div class="col-lg-12">
        <div class="signup_box">
          <h4>Signup with an existing account</h4>
          <br>
          <ul class="social_buttons">
            <li>
              <%= link_to user_omniauth_authorize_path(provider: 'linkedin'), class: 'linkedin', data: { disable_with: 'Connecting...'} do %>
                <i class="fa fa-linkedin"></i> Sign up with LinkedIn
              <% end %>
            </li>
          </ul>
          <hr class="intro-divider">
          <h4>Signup with email</h5>
          <%= form_for(resource, as: resource_name, url: user_registration_path(resource)) do |f| %>
            <%= devise_error_messages! %>
            <div>
              <%= f.label :email %><br />
              <%= f.email_field :email %>
            </div>
            <div>
              <%= f.submit 'Sign up', class: 'btn' %>
            </div>
          <% end %>
          <%= link_to "Email already in use? Try to restore password!", new_password_path(resource_name) %>
        </div>
      </div>
    </div>
  </div>
  <!-- /.container -->
</div>



