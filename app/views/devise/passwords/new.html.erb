<div class="signup login">
  <div class="well col-md-6 col-md-offset-3">
    <div class="content">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { id: 'login-form' }) do |f| -%>
        <div class="header">
          <h4 class="title" id="logo_bk">
            <%= image_tag 'logo-black.png', alt: 'CONSULTED.co' %>
          </h4>
          <p class="popup-slogan text-center">Retrieve your password</p>
          <hr>
          <%= render partial: 'layouts/messages' %>
          <br>
        </div>
        <div class="body">
          <div class="popup-row control-cover">
            <%= f.text_field :email, class: 'form-control', placeholder: 'Email address', id: 'login_field' %>
            <span class="checked" style="display:none"></span>
            <span class="crossed" style="display:none"><i class="fa fa-ban"></i></span>
          </div>
          <div class="popup-row text-center" id="password_fields">
            <%= f.submit "Send me password instructions", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
