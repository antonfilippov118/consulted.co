<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= favicon_link_tag 'favicon.png'  %>
    <title><%= @title ? "#{@title} - Consulted" : default_title %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Consulted" %>">
    <%= stylesheet_link_tag "follow" %>
    <!--[if lt IE 9]>
      <%= javascript_include_tag 'compatibility' %>
    <![endif]-->
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="wrapper">
      <div id="navbar">
        <%= render partial: 'layouts/application/header' %>
        <% if user_signed_in? %>
          <%= render partial: 'layouts/application/navigation' %>
        <% end %>
      </div>
      <section id="main">
        <div class="container">
          <%= yield %>
        </div>
      </section>
      <%= render partial: 'layouts/signup' %>
      <div class="push"></div>
    </div>
    <div class="footer">
      <%= render partial: 'layouts/footer', locals: { inverted: true } %>
      <%= render partial: 'layouts/copy' %>
    </div>
    <%= javascript_include_tag "application" %>
    <% if analytics_key %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', '<%= analytics_key %>', 'consulted.co');
      ga('send', 'pageview');
    </script>
    <% end %>
  </body>
</html>
