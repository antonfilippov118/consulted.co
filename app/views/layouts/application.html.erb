<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Consulted" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Consulted" %>">
    <%= stylesheet_link_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render partial: "layouts/navigation" %>
    <%= render partial: "layouts/messages" %>
    <div class="content">
      <%= yield %>
      <div class="push"></div>
    </div>

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <ul class="list-inline">
              <li>
                <a href="#">Home</a>
              </li>
              <li class="footer-menu-divider">&sdot;</li>
              <li>
                <a href="#contact">Contact</a>
              </li>
            </ul>
            <p class="copyright text-muted small">Copyright &copy; consulted.co 2014. All Rights Reserved</p>
          </div>
        </div>
      </div>
    </footer>
    <%= javascript_include_tag "application" %>
    <% if analytics_key %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', '<%= analytics_key %>', 'consulted.co');
        ga('send', 'pageview');

      </script>
    <% end %>
  </body>
</html>
