<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= favicon_link_tag 'favicon.png'  %>
    <title><%= @title ? "#{@title} - Consulted" : default_title %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Consulted" %>">
    <%= stylesheet_link_tag "follow" %>
    <!--[if lt IE 9]>
      <%= javascript_include_tag 'compatibility' %>
    <![endif]-->
    <%= csrf_meta_tags %>
  </head>
  <body ng-app="consulted.finder" data-group="<%= @group.slug %>">
    <div class="wrapper" class="offerfull-form">
      <div id="navbar">
        <%= render partial: 'layouts/application/header' %>
        <% if user_signed_in? %>
          <%= render partial: 'layouts/application/navigation' %>
        <% end %>
      </div>
      <div filter></div>
      <section id="main" ng-controller="ResultCtrl">
        <div class="container">
          <%= render partial: 'layouts/breadcrumbs', locals: { group: @group, with_group: true} %>
          <div class="text-center" ng-show="searching">
            <i class="fa fa-spin fa-refresh fa-2x"></i>
          </div>
          <div class="text-center" ng-show="!searching && offers.length == 0">
            <h3>No results.</h3>
          </div>
          <div ng-show="!searching && offers.length > 0" class="ng-cloak">
            <div class="expert clr" ng-repeat="offer in offers">
              <div class="expert-left">
                <div class="expert-info">
                  <div class="expert-images">
                    <div class="expert-img">
                      <img ng-src="{{offer.expert.image}}" alt="{{offer.expert.name}}">
                    </div>
                    <a ng-href="{{offer.expert.profile_url}}" target="_blank">Full Profile</a>
                  </div>
                  <div class="expert-name heading2">{{offer.expert.name}}</div>
                  <div class="expert-exp">
                    <strong>Category Experience:</strong> {{offer.experience}} years</div>
                  <div class="expert-pph">
                    <span class="price">${{offer.rate}}</span>/hour</div>
                </div>
                <div class="expert-cite">
                  {{offer.description}}
                </div>
              </div>
              <div class="expert-right">
                <div class="expert-history">
                  <ul>
                    <li ng-repeat="company in offer.expert.companies">{{company.name}}, {{company.position}}, {{company.from}}</li>
                  </ul>
                </div>
                <div class="expert-rating">
                  <div ng-show="offer.awesomes.length > 0">
                    <div class="rating-hand">0</div>
                    <span class="flaticon flaticon-help help" tooltip-placement="top" tooltip="'Awesome count' shows the average rate per hour of the last 5 awesome counts â€“ provides a good indication to advice seekers at which rate 'awesomes' were collected"></span>
                  </div>
                </div>
                <div class="expert-end">
                  <div class="expert-act">
                    <% if user_signed_in? %>
                      <a ng-href="<%= offers_path %>/{{offer.url}}/review" class="btn btn-primary">Contact</a>
                    <% else %>
                      <%= link_to new_user_registration_path, class: 'btn btn-primary' do %>
                        Sign up to book
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <%= render partial: 'layouts/signup' %>
      <div class="push"></div>
    </div>
    <div class="footer">
      <%= render partial: 'layouts/footer', locals: { inverted: true } %>
      <%= render partial: 'layouts/copy' %>
    </div>
    <%= javascript_include_tag "application" %>
    <% if analytics_key %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', '<%= analytics_key %>', 'consulted.co');
      ga('send', 'pageview');
    </script>
    <% end %>
    <% %w(filter).each do |partial| %>
    <script type="text/ng-template" id="<%= partial %>">
      <%= render partial: "groups/ng/#{partial}"  %>
    </script>
    <% end %>
  </body>
</html>
