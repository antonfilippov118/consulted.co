<div class="result">
  <h3>{{child.name}}</h3>
  <hr class="no-margin">
  <div ng-show="open()">
    <div class="no-border" ng-if="child.description" ng-bind-html="child.description"></div>
    <div class="no-border" ng-if="child.seeker_gain">
      <h5><em>Typical questions asked</em></h5>
      <div ng-bind-html="child.seeker_gain"></div>
    </div>
  </div>
  <div class="result-bottom">
    <a class="result-info" ng-click="toggle()" ng-show="child.description || child.seeker_gain">
      <span ng-hide="open()">
        <span class="flaticon flaticon-info"></span>Learn more
      </span>
      <span ng-show="open()">
        Close
      </span>
    </a>
    <a ng-href="/groups/{{child.slug}}" class="btn btn-primary">Browse experts</a>
  </div>
</div>
