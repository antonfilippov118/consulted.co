<div>
  <div class="clr selectoffer-cats" ng-repeat="level in crumbs" ng-hide="last(level)">
    <div
      class="selectoffer-cat"
      ng-repeat="child in level.children | orderBy:'name'"
      ng-class="{'sel':inPath(child.slug)}"
      ng-click="select(child)"
    >
        {{child.name}}
    </div>
  </div>
  <div class="row pool clr" ng-hide="group.depth === 0">
    <div class="col-md-4">
      <div class="clr selectoffer-subcats">
        <div class="selectoffer-subcat" ng-click="select(sibling)" ng-repeat="sibling in getActiveGroup().children | orderBy:'name'" ng-class="{'sel':inPath(sibling.slug)}">
          {{sibling.name}}
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div child="child" ng-repeat="child in getSubGroup() | prioritized | orderBy:'name'"></div>
      <div child="child" ng-repeat="child in getSubGroup() | prioritized:false | orderBy:'name'"></div>
    </div>
  </div>
</div>
